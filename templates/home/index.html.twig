{% extends 'base.html.twig' %}

{% block title %}Bienvenue - RestoBooking
{% endblock %}

{% block body %}
	<div class="bg-white">
		<div class="relative bg-gray-900 h-[600px]">

			<div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">RestoBooking</h1>
				<p class="mt-6 text-xl text-gray-300 max-w-3xl">Découvrez nos restaurants partenaires et réservez votre table en quelques clics</p>

				<div class="mt-10 space-x-4">
					<a href="{{ path('app_admin_dashboard') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
						Réserver une table
					</a>
				</div>
			</div>
		</div>

		<div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-extrabold text-gray-900">Nos restaurants à la une</h2>
			<div class="mt-12 grid gap-16 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-12">
				{% for restaurant in restaurants %}
					<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
						<div class="flex-shrink-0">
							<img class="h-48 w-full object-cover" src="{{ restaurant.imageUrl|default('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2070&q=80') }}" alt="{{ restaurant.name }}">
						</div>
						<div class="flex-1 bg-white p-6 flex flex-col justify-between">
							<div class="flex-1">
								<div class="flex justify-between items-center">
									<h3 class="text-xl font-semibold text-gray-900">
										{{ restaurant.name }}
									</h3>
									<div class="flex items-center">
										<span class="text-yellow-400">★</span>
										<span class="ml-1 text-sm text-gray-600">
											{{ restaurant.averageRating|default('Nouveau') }}
										</span>
									</div>
								</div>
								<p class="mt-3 text-base text-gray-500">
									{{ restaurant.description|striptags|slice(0, 150) }}...
								</p>
								<div class="mt-4 text-sm text-gray-600">
									<p>{{ restaurant.address }}</p>
									<p>{{ restaurant.phone }}</p>
								</div>
							</div>
							<div class="mt-6 flex justify-between items-center">
								<a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
									Voir le menu
								</a>
								<a href="{{ path('app_reservation_new', {'restaurant': restaurant.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-indigo-100 hover:bg-indigo-200">
									Réserver
								</a>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-span-3 text-center py-12">
						<p class="text-gray-500">Aucun restaurant disponible pour le moment.</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
