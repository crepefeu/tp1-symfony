{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
<div class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <div class="p-6 bg-white border-b border-gray-200">
                <h1 class="text-2xl font-bold mb-6">Nouvelle réservation</h1>

                {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                    <div class="grid grid-cols-2 gap-4">
                        {{ form_row(form.dateTime) }}
                        {{ form_row(form.numberOfGuests) }}
                        {{ form_row(form.customerFirstName) }}
                        {{ form_row(form.customerLastName) }}
                        {{ form_row(form.customerEmail) }}
                        {{ form_row(form.customerPhone) }}
                        {{ form_row(form.specialRequests) }}
                    </div>

                    <div class="mt-6">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Confirmer la réservation
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
