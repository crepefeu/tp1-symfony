{% extends 'base.html.twig' %}

{% block title %}Détails de la réservation{% endblock %}

{% block body %}
<div class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <div class="p-6 bg-white border-b border-gray-200">
                <h1 class="text-2xl font-bold mb-6">Détails de la réservation</h1>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <h2 class="text-lg font-semibold mb-2">Informations de réservation</h2>
                        <p><strong>Restaurant :</strong> {{ reservation.restaurant.name }}</p>
                        <p><strong>Date :</strong> {{ reservation.dateTime|date('d/m/Y H:i') }}</p>
                        <p><strong>Nombre de personnes :</strong> {{ reservation.numberOfGuests }}</p>
                        <p><strong>Statut :</strong> {{ reservation.status }}</p>
                    </div>
                    
                    <div>
                        <h2 class="text-lg font-semibold mb-2">Informations client</h2>
                        <p><strong>Nom :</strong> {{ reservation.customerFirstName }} {{ reservation.customerLastName }}</p>
                        <p><strong>Email :</strong> {{ reservation.customerEmail }}</p>
                        <p><strong>Téléphone :</strong> {{ reservation.customerPhone }}</p>
                    </div>
                </div>

                {% if reservation.specialRequests %}
                    <div class="mt-4">
                        <h2 class="text-lg font-semibold mb-2">Demandes spéciales</h2>
                        <p>{{ reservation.specialRequests }}</p>
                    </div>
                {% endif %}

                <div class="mt-6">
                    <a href="{{ path('app_home') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                        Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
