{# templates/restaurant/details.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	{{ restaurant.name }}
	- Détails
{% endblock %}

{% block body %}
	<div
		class="bg-white">
		{# Restaurant Header #}
		<div class="relative">
			<div class="h-96 w-full object-cover">
				<img src="{{ restaurant.imageUrl|default('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4') }}" alt="{{ restaurant.name }}" class="w-full h-full object-cover">
			</div>
			<div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
				<div class="text-center text-white">
					<h1 class="text-4xl font-bold">{{ restaurant.name }}</h1>
					<div class="mt-4 flex items-center justify-center">
						<span class="text-yellow-400 text-xl">
							{% for i in 1..5 %}
								{% if i <= restaurant.averageRating|default(0) %}★{% else %}☆
								{% endif %}
							{% endfor %}
						</span>
						<span class="ml-2">({{ restaurant.reviews|length }}
							avis)</span>
					</div>
				</div>
			</div>
		</div>

		{# Restaurant Info #}
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="md:col-span-2">
					<div class="prose max-w-none">
						<h2 class="text-2xl font-bold mb-4">À propos</h2>
						<p>{{ restaurant.description }}</p>
					</div>

					{# Menu Section #}
					<div class="mt-12">
						<h2 class="text-2xl font-bold mb-6">Menu</h2>
						{% for menu in restaurant.menus %}
							<div class="bg-gray-50 rounded-lg p-6 mb-6">
								<h3 class="text-xl font-semibold mb-4">{{ menu.name }}</h3>
								<div class="space-y-4">
									{% for item in menu.menuItems %}
										<div class="flex justify-between items-center">
											<div>
												<h4 class="font-medium">{{ item.name }}</h4>
												<p class="text-gray-600">{{ item.description }}</p>
											</div>
											<span class="font-semibold">{{ item.price }}€</span>
										</div>
									{% endfor %}
								</div>
							</div>
						{% endfor %}
					</div>

					{# Reviews Section #}
					<div class="mt-12">
						<h2 class="text-2xl font-bold mb-6">Avis des clients</h2>
						<div class="space-y-6">
							{% for review in restaurant.reviews %}
								<div class="bg-gray-50 rounded-lg p-6">
									<div class="flex items-center mb-4">
										<div class="text-yellow-400">
											{% for i in 1..5 %}
												{% if i <= review.rating %}★{% else %}☆
												{% endif %}
											{% endfor %}
										</div>
										<span class="ml-2 text-gray-600">{{ review.createdAt|date('d/m/Y') }}</span>
									</div>
									<p>{{ review.comment }}</p>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>

				{# Sidebar Info & Reservation #}
				<div class="md:col-span-1">
					<div class="bg-gray-50 rounded-lg p-6 sticky top-4">
						<h3 class="text-lg font-semibold mb-4">Informations</h3>
						<div class="space-y-4">
							<div>
								<h4 class="font-medium">Adresse</h4>
								<p class="text-gray-600">{{ restaurant.address }}</p>
							</div>
							<div>
								<h4 class="font-medium">Téléphone</h4>
								<p class="text-gray-600">{{ restaurant.phone }}</p>
							</div>
							<div>
								<h4 class="font-medium">Horaires d'ouverture</h4>
								<p class="text-gray-600 whitespace-pre-line">{{ restaurant.openingHours }}</p>
							</div>
						</div>

						{# Reservation Form #}
						<div class="mt-8">
							<h3 class="text-lg font-semibold mb-4">Réserver une table</h3>
							{{ form_start(reservation_form) }}
							<div class="space-y-4">
								{{ form_row(reservation_form.customerFirstName, {
                                    'attr': {'class': 'w-full rounded-md'}
                                }) }}
								{{ form_row(reservation_form.customerLastName, {
                                    'attr': {'class': 'w-full rounded-md'}
                                }) }}
								{{ form_row(reservation_form.customerEmail, {
                                    'attr': {'class': 'w-full rounded-md'}
                                }) }}
								{{ form_row(reservation_form.customerPhone, {
                                    'attr': {'class': 'w-full rounded-md'}
                                }) }}
								{{ form_row(reservation_form.dateTime, {
                                    'attr': {'class': 'w-full rounded-md'}
                                }) }}
								{{ form_row(reservation_form.numberOfGuests, {
                                    'attr': {'class': 'w-full rounded-md', 'min': 1, 'max': 10}
                                }) }}
								{{ form_row(reservation_form.specialRequests, {
                                    'attr': {'class': 'w-full rounded-md', 'rows': 3}
                                }) }}
							</div>
							<button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700">
								Réserver
							</button>
							{{ form_end(reservation_form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
