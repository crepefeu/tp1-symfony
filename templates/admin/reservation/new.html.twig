{% extends 'admin/shared/_form_layout.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block form_title %}Créer une nouvelle réservation{% endblock %}
{% block form_description %}Créez une réservation pour un client{% endblock %}

{% block content %}
    <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                    <div class="sm:col-span-2">
                        {{ form_label(form.restaurant, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.restaurant, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.restaurant, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.dateTime, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.dateTime, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.dateTime, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.numberOfGuests, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.numberOfGuests, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.numberOfGuests, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.customerFirstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.customerFirstName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.customerFirstName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.customerLastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.customerLastName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.customerLastName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.customerEmail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.customerEmail, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.customerEmail, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.customerPhone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.customerPhone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.customerPhone, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.restaurantTable, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.restaurantTable, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.restaurantTable, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div class="sm:col-span-2">
                        {{ form_label(form.specialRequests, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.specialRequests, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'rows': '3'}}) }}
                        {{ form_errors(form.specialRequests, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                </div>

                <div class="flex justify-end space-x-3">
                    <a href="{{ path('app_admin_reservation_index') }}" 
                       class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Créer la réservation
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
