{% extends 'base.html.twig' %}

{% block title %}Nouveau code promo{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
        <div class="relative py-3 w-full sm:max-w-4xl sm:mx-auto">
            <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
                <div class="max-w-3xl mx-auto">
                    <div class="divide-y divide-gray-200">
                        <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                            <h1 class="text-2xl font-bold text-center mb-8 text-indigo-600">Créer un nouveau code promo</h1>

                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                                <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                                    <div class="space-y-6">
                                        <div>
                                            {{ form_label(form.code, 'Code', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                            {{ form_widget(form.code) }}
                                            {{ form_errors(form.code, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                                        </div>
                                        <div>
                                            {{ form_label(form.discount, 'Réduction (%)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                            {{ form_widget(form.discount) }}
                                            {{ form_errors(form.discount, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                                        </div>
                                    </div>

                                    <div class="space-y-6">
                                        <div>
                                            {{ form_label(form.startDate, 'Date de début', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                            {{ form_widget(form.startDate) }}
                                            {{ form_errors(form.startDate, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                                        </div>
                                        <div>
                                            {{ form_label(form.endDate, 'Date de fin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                            {{ form_widget(form.endDate) }}
                                            {{ form_errors(form.endDate, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                                        </div>
                                        <div>
                                            {{ form_label(form.restaurant, 'Restaurant', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                            {{ form_widget(form.restaurant) }}
                                            {{ form_errors(form.restaurant, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="flex items-center justify-between mt-8">
                                    <a href="{{ path('app_admin_discount_index') }}" 
                                       class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                        Retour à la liste
                                    </a>
                                    <button type="submit" 
                                            class="w-32 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        Créer
                                    </button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
