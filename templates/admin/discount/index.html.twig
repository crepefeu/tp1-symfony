{# templates/admin/discount/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Discounts Management{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Discounts</h1>
            <a href="{{ path('app_admin_discount_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Create New
            </a>
        </div>

        <div class="bg-white shadow-md rounded my-6">
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                        <th class="py-3 px-6 text-left">ID</th>
                        <th class="py-3 px-6 text-left">Code</th>
                        <th class="py-3 px-6 text-left">Amount</th>
                        <th class="py-3 px-6 text-left">Valid Until</th>
                        <th class="py-3 px-6 text-left">Restaurant</th>
                        <th class="py-3 px-6 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
                    {% for discount in discounts %}
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left">{{ discount.id }}</td>
                            <td class="py-3 px-6 text-left">{{ discount.code }}</td>
                            <td class="py-3 px-6 text-left">{{ discount.amount }}%</td>
                            <td class="py-3 px-6 text-left">{{ discount.validUntil ? discount.validUntil|date('Y-m-d') : '' }}</td>
                            <td class="py-3 px-6 text-left">{{ discount.restaurant.name }}</td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex item-center justify-center">
                                    <a href="{{ path('app_admin_discount_show', {'id': discount.id}) }}" class="text-blue-500 hover:text-blue-700 mx-2">
                                        View
                                    </a>
                                    <a href="{{ path('app_admin_discount_edit', {'id': discount.id}) }}" class="text-yellow-500 hover:text-yellow-700 mx-2">
                                        Edit
                                    </a>
                                    <form method="post" action="{{ path('app_admin_discount_delete', {'id': discount.id}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discount.id) }}">
                                        <button class="text-red-500 hover:text-red-700 mx-2">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}