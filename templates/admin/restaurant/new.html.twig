{% extends 'base.html.twig' %}

{% block title %}Nouveau restaurant{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
        <div class="relative py-3 w-full sm:max-w-xl sm:mx-auto">
            <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
                <div class="max-w-md mx-auto">
                    <div class="divide-y divide-gray-200">
                        <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                            <h1 class="text-2xl font-bold text-center mb-8">Nouveau restaurant</h1>

                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                                <div>
                                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                    {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>

                                <div>
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500', 'rows': '4'}}) }}
                                    {{ form_errors(form.description) }}
                                </div>

                                <div>
                                    {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                    {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500'}}) }}
                                    {{ form_errors(form.address) }}
                                </div>

                                <div>
                                    {{ form_label(form.phone, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                    {{ form_widget(form.phone, {'attr': {'class': 'mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500'}}) }}
                                    {{ form_errors(form.phone) }}
                                </div>

                                <div>
                                    {{ form_label(form.categories, 'Catégories', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                    <div class="mt-2 border border-slate-300 rounded-md divide-y divide-slate-200">
                                        {% for child in form.categories %}
                                            <div class="relative flex items-start px-4 py-3 hover:bg-gray-50">
                                                <div class="min-w-0 flex-1 text-sm">
                                                    {{ form_widget(child, {'attr': {'class': 'w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500'}}) }}
                                                    {{ form_label(child, null, {'label_attr': {'class': 'ml-3 font-medium text-gray-700'}}) }}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {{ form_errors(form.categories) }}
                                </div>

                                <div>
                                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        Créer
                                    </button>
                                </div>
                            {{ form_end(form) }}
                            
                            <div class="mt-6 text-center">
                                <a href="{{ path('app_admin_restaurant_index') }}" class="text-sm text-indigo-600 hover:text-indigo-500">
                                    Retour à la liste
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
