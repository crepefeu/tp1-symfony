{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div id="notifications" class="space-y-2 mb-6"></div>

    {# Statistics Cards #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-indigo-100 rounded-md p-3">
                        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dt class="text-sm font-medium text-gray-500 truncate">Utilisateurs</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">{{ users_count }}</div>
                        </dd>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_admin_user_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Gérer les utilisateurs →</a>
                </div>
            </div>
        </div>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-indigo-100 rounded-md p-3">
                        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dt class="text-sm font-medium text-gray-500 truncate">Restaurants</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">{{ restaurants_count }}</div>
                        </dd>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_admin_restaurant_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Gérer les restaurants →</a>
                </div>
            </div>
        </div>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-indigo-100 rounded-md p-3">
                        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dt class="text-sm font-medium text-gray-500 truncate">Réservations</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">{{ reservations_count }}</div>
                        </dd>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_admin_reservation_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Gérer les réservations →</a>
                </div>
            </div>
        </div>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-indigo-100 rounded-md p-3">
                        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dt class="text-sm font-medium text-gray-500 truncate">Avis</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">{{ reviews_count }}</div>
                        </dd>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_admin_review_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Gérer les avis →</a>
                </div>
            </div>
        </div>
    </div>

    {# Recent Activity Section #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Dernières réservations</h3>
                <p class="mt-1 text-sm text-gray-500">Les réservations les plus récentes</p>
            </div>
            <div class="divide-y divide-gray-200">
                {% for reservation in recent_reservations %}
                    <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                        <div class="flex items-center justify-between">
                            <div class="text-sm font-medium text-indigo-600">{{ reservation.restaurant.name }}</div>
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                {% if reservation.status == constant('App\\Enum\\ReservationStatus::PENDING') %}
                                    bg-yellow-100 text-yellow-800
                                {% elseif reservation.status == constant('App\\Enum\\ReservationStatus::CONFIRMED') %}
                                    bg-green-100 text-green-800
                                {% else %}
                                    bg-red-100 text-red-800
                                {% endif %}">
                                {{ reservation.status.label }}
                            </span>
                        </div>
                        <div class="mt-2 sm:flex sm:justify-between">
                            <p class="flex items-center text-sm text-gray-500">
                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                {{ reservation.dateTime|date('d/m/Y H:i') }}
                            </p>
                            <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                {{ reservation.numberOfGuests }} personnes
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Derniers avis</h3>
            </div>
            <div class="divide-y divide-gray-200">
                {% for review in recent_reviews %}
                    <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                        <div class="flex items-center justify-between">
                            <div class="text-sm font-medium text-indigo-600">{{ review.restaurant.name }}</div>
                            <div class="flex items-center text-yellow-400">
                                {% for i in 1..5 %}
                                    {% if i <= review.rating %}
                                        ★
                                    {% else %}
                                        ☆
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="mt-2 sm:flex sm:justify-between">
                            <div class="text-sm text-gray-500">{{ review.comment|slice(0, 100) }}...</div>
                            <div class="mt-2 text-sm text-gray-500">
                                Par: {{ review.displayEmail }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Quick Actions #}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg border">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Actions rapides</h3>
            <p class="mt-1 text-sm text-gray-500">Accès rapide aux actions principales</p>
        </div>
        <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-4">
                <a href="{{ path('app_admin_restaurant_new') }}" 
                   class="inline-flex items-center justify-center px-4 py-2 bg-white border border-indigo-600 text-sm font-medium rounded-md text-indigo-600 hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-150">
                    <svg class="h-5 w-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    Nouveau restaurant
                </a>

                <a href="{{ path('app_admin_user_new') }}" 
                   class="inline-flex items-center justify-center px-4 py-2 bg-white border border-green-600 text-sm font-medium rounded-md text-green-600 hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-150">
                    <svg class="h-5 w-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                    </svg>
                    Nouvel utilisateur
                </a>

                <a href="{{ path('app_admin_category_index') }}" 
                   class="inline-flex items-center justify-center px-4 py-2 bg-white border border-purple-600 text-sm font-medium rounded-md text-purple-600 hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-150">
                    <svg class="h-5 w-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                    </svg>
                    Gérer catégories
                </a>

                <a href="{{ path('app_admin_discount_index') }}" 
                   class="inline-flex items-center justify-center px-4 py-2 bg-white border border-yellow-600 text-sm font-medium rounded-md text-yellow-600 hover:bg-yellow-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition-all duration-150">
                    <svg class="h-5 w-5 mr-2 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                    </svg>
                    Gérer promotions
                </a>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
const eventSource = new EventSource("{{ mercure('restaurant/reservations')|escape('js') }}");
const notificationsContainer = document.getElementById('notifications');

eventSource.onmessage = (event) => {
    const data = JSON.parse(event.data);
    if (data.type === 'reservation') {
        const notification = document.createElement('div');
        notification.classList.add('bg-blue-100', 'border-l-4', 'border-blue-500', 'text-blue-700', 'p-4', 'mb-4');
        notification.innerHTML = `
            <div class="flex items-center">
                <div class="py-1">
                    <svg class="h-6 w-6 text-blue-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <p class="font-bold">Nouvelle réservation</p>
                    <p>Restaurant: ${data.data.restaurant}</p>
                    <p>Date: ${new Date(data.data.date).toLocaleString()}</p>
                    <p>Personnes: ${data.data.guests}</p>
                </div>
            </div>
        `;
        notificationsContainer.prepend(notification);
        
        // Remove notification after 5 seconds
        setTimeout(() => {
            notification.remove();
        }, 5000);
    }
};
</script>
{% endblock %}
{% endblock %}