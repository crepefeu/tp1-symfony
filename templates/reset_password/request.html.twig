{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-2xl font-bold mb-4">Reset your password</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                }) }}

                <div class="mt-4">
                    <button class="w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700">
                        Send password reset email
                    </button>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}